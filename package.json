{
  "name": "smb-website",
  "version": "1.0.0",
  "description": "SMB Designer Bags Website - E-commerce platform for premium handbags",
  "main": "src/pages/index.html",
  "scripts": {
    "dev": "live-server src/pages --port=3000 --open=/index.html",
    "build": "npm run build:css && npm run build:js && npm run build:assets",
    "build:css": "postcss src/styles/main.css -o dist/css/main.css --map",
    "build:js": "webpack --mode=production",
    "build:assets": "npm run copy:assets && npm run optimize:images",
    "copy:assets": "copyfiles -u 1 src/assets/**/* dist/",
    "optimize:images": "imagemin 'src/assets/images/*.{jpg,png}' --out-dir=dist/assets/images --plugin=imagemin-mozjpeg --plugin=imagemin-pngquant",
    "lint": "eslint src/utils/*.js",
    "lint:fix": "eslint src/utils/*.js --fix",
    "format": "prettier --write \"src/**/*.{html,css,js}\"",
    "test": "jest",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "serve": "http-server dist -p 8080 -o",
    "clean": "rimraf dist",
    "validate:html": "html-validate src/pages/*.html",
    "validate:css": "stylelint \"src/styles/**/*.css\"",
    "analyze": "webpack-bundle-analyzer dist/js/main.js.map",
    "deploy": "gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oderto/smb-website.git"
  },
  "keywords": [
    "ecommerce",
    "fashion",
    "handbags",
    "smb",
    "responsive",
    "accessibility",
    "performance"
  ],
  "author": "SMB Team",
  "license": "MIT",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^9.1.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.8.0",
    "cssnano": "^6.0.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "gh-pages": "^6.3.0",
    "html-validate": "^8.0.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.1",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "jest": "^29.5.0",
    "lighthouse": "^10.4.0",
    "live-server": "^1.2.2",
    "mini-css-extract-plugin": "^2.7.0",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^9.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "sass": "^1.63.0",
    "sass-loader": "^13.3.0",
    "style-loader": "^3.3.0",
    "stylelint": "^15.9.0",
    "stylelint-config-standard": "^33.0.0",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "core-js": "^3.31.0",
    "regenerator-runtime": "^0.13.11"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "volta": {
    "node": "18.17.0",
    "npm": "9.8.1"
  }
}
